@model TheCatProject.Models.PTag

<h3 id="pageheaders">@Html.DisplayFor(model => model.Cat.Name)'s Personality</h3>
<div class="row">
    <div class="col-md-4">
        <button onclick="pageDetailsEnd()" class="myButton">What is this page?</button>
        <p id="details"></p>
    </div>
    <div class="col-md-4">
        <table class="table" id="t01">
            <tr>
                <th>1st trait</th>
                <td>
                    @Html.DisplayFor(model => model.Personality.Type)
                </td>
            </tr>
            <tr>
                <th>2nd trait</th>
                <td>
                    @Html.DisplayFor(model => model.Personality1.Type)
                </td>
            </tr>
            <tr>
                <th>3rd trait</th>
                <td>
                    @Html.DisplayFor(model => model.Personality2.Type)
                </td>
            </tr>
        </table>
        <img src="~/Content/Images/cat14.png" class="img-fluid" width="350" height="272" />
    </div>
    <div class="col-md-4">
        <h4>@Html.ActionLink("change details", "Edit", new { id = Model.ID })</h4>
        <br />
        <h4>@Html.ActionLink("finish " + @Html.DisplayFor(model => model.Cat.Name) + "'s entry", "Summary", "Information", null, htmlAttributes: null)</h4>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/main.js"></script>
}
