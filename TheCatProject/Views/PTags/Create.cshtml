@model TheCatProject.Models.PTag

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Enter your cat's personality traits:</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("CID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.CID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("PID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.PID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="Add my Cat's Personality!" class="myButton" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
