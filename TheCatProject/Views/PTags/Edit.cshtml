@model TheCatProject.Models.PTag

@{
    ViewBag.Title = "Edit";
}

<h3>Kitty Kat Info</h3>
<h4>Make sure all is correct before saving!</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Edit your cat's information:</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("CID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.CID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("PID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.PID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="Update my Cat Traits!" class="myButton" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}