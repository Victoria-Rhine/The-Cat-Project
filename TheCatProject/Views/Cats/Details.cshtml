@model  TheCatProject.Models.Cat

@{
    ViewBag.Title = "Details";
}

<h3>Kitty Kat Info</h3>
<h4>Make sure all is correct before continuing!</h4>

<div class="row">
    <div class="col-md-4">
        <button onclick="myDetailsFunction()" class="myButton">What is this page?</button>
        <p id="details"></p>
    </div>
    <div class="col-md-4">
        <table class="table" id="t01">
            <tr>
                <th>Name</th>
                <th>Age</th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Age)
                </td>
            </tr>
        </table>
        <img src="https://www.pinclipart.com/picdir/big/490-4902220_permalink-to-99-awesome-black-cat-png-ideas.png" class="img-fluid" width="350" height="241" />
    </div>
    <div class="col-md-4">
        <h4>@Html.ActionLink("change details", "Edit", new { id = Model.ID, @class = "myButton" })</h4>
        <br />
        <h4>@Html.ActionLink("all done", "Create")</h4>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/main.js"></script>
} 