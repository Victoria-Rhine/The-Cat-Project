@* Home page *@

<div class="row">
    <div class="col-md-12">
        <h1 id="title">The Cat Project</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style=" width:100% !important;" data-interval="6000">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
                <li data-target="#myCarousel" data-slide-to="6"></li>
                <li data-target="#myCarousel" data-slide-to="7"></li>
                <li data-target="#myCarousel" data-slide-to="8"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Content/Images/cat.jpg">
                    <div class="carousel-caption">
                        <h3>we &hearts; cat stats</h3>
                        <p>how it works &rarr;</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/Images/slide1.png">
                    <div class="carousel-caption">
                        <h3>step 1</h3>
                        <p>input basic information about your cat</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/Images/slide2.png">
                    <div class="carousel-caption">
                        <h3>step 2</h3>
                        <p>confirm information or edit</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/Images/slide3.png">
                    <div class="carousel-caption">
                        <h3>step 3</h3>
                        <p>make sure things look right</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/Images/slide4.png">
                    <div class="carousel-caption">
                        <h3>step 4</h3>
                        <p>continue to add more cat traits</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/Images/slide5.png">
                    <div class="carousel-caption">
                        <h3>step 5</h3>
                        <p>choose all done to stop here</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/Images/slide6.png">
                    <div class="carousel-caption">
                        <h3>step 6</h3>
                        <p>add more traits for your cat</p>
                        <p>consult our handy guides for help</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/Images/slide7.png">
                    <div class="carousel-caption">
                        <h3>step 7</h3>
                        <p>tell us how your cat is unique</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/Images/slide8.png">
                    <div class="carousel-caption">
                        <h3>step 8</h3>
                        <p>all done! see what's next</p>
                    </div>
                </div>
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <p id="pageheaders">@Html.ActionLink("click here to start", "Create", null, htmlAttributes: null) </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

