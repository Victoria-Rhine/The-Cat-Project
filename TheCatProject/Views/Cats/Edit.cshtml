@* Create Cat - Details - Edit Details page
    User page to edit entered name, age, sex *@

@model TheCatProject.Models.Cat

@{
    ViewBag.Option1 = "Name";
    ViewBag.Option2 = "Age";
    ViewBag.Option3 = "Female";
    ViewBag.Option4 = "Male";
}

<h3 id="pageheaders">Displaying: @Html.DisplayFor(model => model.Name)</h3>
<h5>Make sure all is correct before saving</h5>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" id="homeform">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table class="table" id="t01">
                <tr>
                    <th>
                        @ViewBag.Option1
                    </th>
                    <td>
                        @Html.TextBoxFor(model => model.Name, new { @class = "boxes" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>
                        @ViewBag.Option2
                    </th>
                    <td>
                        @Html.TextBoxFor(model => model.Age, new { @class = "boxes", type = "number", min = "0", step = "0.1" })
                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>
                        @ViewBag.Option3
                    </th>
                    <td>
                        @Html.RadioButtonFor(model => model.Sex, "Female")
                    </td>
                </tr>
                <tr>
                    <th>
                        @ViewBag.Option4
                    </th>
                    <td>@Html.RadioButtonFor(model => model.Sex, "Male")</td>
                </tr>
            </table>
            @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
            <input type="submit" value="update my cat" class="myButton" />
        }
    </div>
    <div class="col-md-4"><img src="~/Content/Images/cat9.png" class="img-fluid" width="300" height="229" /></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

