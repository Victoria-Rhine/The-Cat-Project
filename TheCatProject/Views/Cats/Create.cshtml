@model TheCatProject.Models.Cat

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h3>The Cat Project</h3>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h4>Enter your cat's name and age</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.TextBoxFor(model => model.Name, new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            <br />
            @Html.TextBoxFor(model => model.Age, new { @class = "boxes", type = "number", min = "0", step = "0.1" })
            @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
            <br />
            <input type="submit" value="Create" class="btn btn-default" />
        }
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
