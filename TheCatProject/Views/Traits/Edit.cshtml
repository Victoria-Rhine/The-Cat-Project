@model TheCatProject.Models.Trait

<h3 id="pageheaders">Displaying: </h3>
<h5>Make sure all is correct before saving</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Edit your cat's information:</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("CatID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.CatID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("ColorID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.ColorID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("BreedID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.BreedID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="update my cat traits" class="myButton" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}