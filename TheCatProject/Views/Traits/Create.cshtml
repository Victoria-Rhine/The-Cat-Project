@model TheCatProject.Models.Trait

@{
    ViewBag.Title = "Create";
}
           
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Enter your cat's traits:</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("CatID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.CatID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("ColorID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.ColorID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.DropDownList("BreedID", null, htmlAttributes: new { @class = "boxes" })
            @Html.ValidationMessageFor(model => model.BreedID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="Add my Cat Traits!" class="myButton" />
        </div>
    </div>

}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
