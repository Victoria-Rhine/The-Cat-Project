@model IEnumerable<TheCatProject.Models.Trait>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Breed.CatBreed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cat.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color.CatColor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Breed.CatBreed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cat.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color.CatColor)
        </td>
